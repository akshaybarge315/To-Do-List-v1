<!-- applying all your pages thats why we use EJS layout -->
<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>


<div class="box">
  <% for(var i=0; i<NewListitems.length; i++) { %>
    <div class="item">
      <input type="checkbox">
      <p> <%= NewListitems[i] %> </p>
    </div>

  <% } %>

  <form class="item" action="/" method="post">
     <input type="text" name="newItem" placeholder="New Item" autocomplete="off"> <!-- autocomplete does not show suggestion. -->
    <button type="submit" name="list" value=<%= listTitle %>> + </button>
  </form>
</div>

<!-- same as footer applying for all pages of footer -->
<%- include("footer") -%>
